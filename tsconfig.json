{
    "compilerOptions": {
        "target": "ES2022",
        "module": "ES2022",
        "jsx": "react-jsx",
        "jsxImportSource": "@emotion/react",
        "moduleResolution": "node",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "skipLibCheck": true,
        "baseUrl": ".",
        "paths": {
            "@/*": ["src/*"],
            "@common/*": ["src/common/*"],
            "@todo/*": ["src/todo/*"]
        }
    },
    "include": [
        "src/**/*"
    ],
    "exclude": ["node_modules", "build"]
}